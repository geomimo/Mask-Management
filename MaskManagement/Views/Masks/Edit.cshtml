<!--Masks-->
@model MaskManagement.Models.MaskVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FabricId" class="control-label"></label>
                <input asp-for="FabricId" class="form-control" value=@Model.FabricId />
                <span asp-validation-for="FabricId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-control-file">
                <label asp-for="Image" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose Image...</label>
                </div>
            </div>
            <br />
            <div class="form-group float-none">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary text-dark">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
