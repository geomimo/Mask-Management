@model IEnumerable<MaskManagement.Models.MaskVM>

@{
    ViewData["Title"] = "Masks";
}

<h1>Masks</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-pencil"></i> Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FabricId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FabricId)
            </td>
            <td>
                <img src=@item.ImagePath class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info text-dark" asp-route-id="@item.Id">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <a asp-action="Delete" class="btn btn-danger text-dark" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
