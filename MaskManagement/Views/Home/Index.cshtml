@model IEnumerable<MaskManagement.Models.PurchaseDetailsVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Purchases</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-pencil"></i> Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>

                    <div class="btn-group">
                        <a asp-action="Details" class="btn btn-secondary text-dark" asp-route-id="@item.PurchaseId">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Edit" class="btn btn-info text-dark" asp-route-id="@item.PurchaseId">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        
                        <a asp-action="Delete" class="btn btn-danger text-dark" asp-route-id="@item.PurchaseId" onclick="return confirm('Are you sure you want to delete this record?')">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
