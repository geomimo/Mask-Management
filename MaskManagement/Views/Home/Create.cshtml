<!--Home-->
@model MaskManagement.Models.PurchaseCreateVM

@{
    ViewData["Title"] = "Create";
    List<MaskManagement.Models.MaskVM> allMasks = ViewBag.Masks;
}

<h1>Add New</h1>

<hr />

<div class="container-lg ">
    <form asp-action="Create">
        <div class="form-group row flex-fill">

            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PurchaseType" class="control-label"></label>
                    <select asp-for="PurchaseType" class="form-control custom-select">
                        <option value="1">Retail</option>
                        <option value="2">Wholesale</option>
                    </select>
                    <span asp-validation-for="PurchaseType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedMasks" class="control-label"></label>
                    <input type="hidden" name="selectedMasks" id="selectedMasks" />
                    <table asp-for="SelectedMasks" class="table table-bordered" id="selectedMasksTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedMasks[0].Mask.FabricId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedMasks[0].Quantity)
                                </th>
                                <th>
                                    Remove
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" onclick="loadData()" />
                </div>
            </div>
            <div class="col-md-8 form-group">
                <div class="form-group">
                    @await Html.PartialAsync("_MasksTable", allMasks)
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary text-dark">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/MasksTable.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}